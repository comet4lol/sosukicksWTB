        <div class="invalid-feedback">You must select atleast one size.</div>

        <label class="form-label " for="password">Admin Password</label>
        <input class="form-control" type="text" name="password" id="password" required>
        <div class="invalid-feedback">tothemoon</div>
        
        <label class="form-label" for="imageurl">Image URL (optional)</label>
        <input class="form-control" type="text" name="imageURL" id="image">

        <button class="btn btn-primary" type="submit">Add Sneaker</button>
    </form>
</div>